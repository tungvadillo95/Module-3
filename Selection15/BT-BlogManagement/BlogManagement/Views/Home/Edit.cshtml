@model RegisterBlogView
@{
    ViewData["Title"] = "Edit blog";
}
<h2 class="text-success">CẬP NHẬT BLOG</h2>
<hr />
<div style="width: 70%; padding-left: 20px">
    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-2">
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="BlogName"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="BlogName" class="form-control" />
                <span asp-validation-for="BlogName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Present"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Present" class="form-control" />
                <span asp-validation-for="Present" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Category"></label>
            </div>
            <div class="col-sm-10">
                <select asp-for="Category" class="custom-select"
                        asp-items="@Html.GetEnumSelectList<CategoryBlog>()">
                    <option value="">Select a department</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Hủy</a>
            </div>
        </div>
    </form>
</div>