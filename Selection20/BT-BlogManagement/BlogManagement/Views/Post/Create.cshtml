@model RegisterPostView
@{
    ViewData["Title"] = "Create Post";
}
<h2 class="text-success">THÊM POST MỚI</h2>
<hr />
<div style="width: 70%; padding-left: 20px">
    <form enctype="multipart/form-data" asp-controller="Post" asp-action="Create" method="post" class="mt-2">
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Title"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <label asp-for="Content">Content:</label>
                <textarea class="form-control" rows="5" id="comment" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Tạo</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Hủy</a>
            </div>
        </div>
    </form>
</div>