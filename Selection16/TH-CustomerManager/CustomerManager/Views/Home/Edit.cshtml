@model RegisterView
@{
    ViewBag.Title = "Create new customer";
}

<div>
    <h1>CẬP NHẬT TÀI KHOẢN</h1>
    @using (Html.BeginForm("Edit", "Home", "POST"))
    {
        @Html.AntiForgeryToken();
        <div class="row form-group">
            @Html.LabelFor(e => e.ProvinceId, htmlAttributes: new { @class = "col-2" })
            <div class="col-10">
                @Html.DropDownListFor(e => e.ProvinceId, new SelectList(Model.Provinces, "id", "_name"), htmlAttributes: new { @class = "custom-select" })
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(e => e.Name, htmlAttributes: new { @class = "col-2" })
            <div class="col-10">
                @Html.TextBoxFor(e => e.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(e => e.Address, htmlAttributes: new { @class = "col-2" })
            <div class="col-10">
                @Html.TextBoxFor(e => e.Address, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Address, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            @Html.LabelFor(e => e.Phone, htmlAttributes: new { @class = "col-2" })
            <div class="col-10">
                @Html.TextBoxFor(e => e.Phone, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Phone, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Hủy</a>
        </div>
    }
</div>