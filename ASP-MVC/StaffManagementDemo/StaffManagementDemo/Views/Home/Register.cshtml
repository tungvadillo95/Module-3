@model RegisterView
@{
    ViewBag.Title = "Create new staff";
}

<div>
    <h1>ĐĂNG KÝ TÀI KHOẢN</h1>
    @using (Html.BeginForm("Register", "Home", "POST"))
    {
        @Html.AntiForgeryToken();
        <fieldset>
            <legend>Thông tin cá nhân</legend>
            <div class="row form-group">
                @Html.LabelFor(e => e.Fullname, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.TextBoxFor(e => e.Fullname, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.Fullname, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            <div class="row form-group">
                @Html.LabelFor(e => e.Email, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.TextBoxFor(e => e.Email, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.Email, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            <div class="row form-group">
                @Html.LabelFor(e => e.PhoneNumber, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.TextBoxFor(e => e.PhoneNumber, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.PhoneNumber, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>Mật khẩu của bạn</legend>
            <div class="row form-group">
                @Html.LabelFor(e => e.Password, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.TextBoxFor(e => e.Password, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.Password, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            <div class="row form-group">
                @Html.LabelFor(e => e.ConfirmPassword, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.TextBoxFor(e => e.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.ConfirmPassword, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>Thông tin địa chỉ</legend>
            <div class="row form-group">
                @Html.LabelFor(e => e.ProvinceId, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.DropDownListFor(e => e.ProvinceId, new SelectList(Model.Provinces, "id", "_name"), htmlAttributes: new { @class = "custom-select" })
                </div>
            </div>
            <div class="row form-group">
                @Html.LabelFor(e => e.DistrictId, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.DropDownListFor(e => e.DistrictId, new SelectList(Model.Districts, "id", "DistrictName"), htmlAttributes: new { @class = "custom-select" })
                </div>
            </div>
            <div class="row form-group">
                @Html.LabelFor(e => e.WardId, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.DropDownListFor(e => e.WardId, new SelectList(Model.Wards, "id", "WardName"), htmlAttributes: new { @class = "custom-select" })
                </div>
            </div>
            <div class="row form-group">
                @Html.LabelFor(e => e.Address, htmlAttributes: new { @class = "col-2" })
                <div class="col-10">
                    @Html.TextBoxFor(e => e.Address, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.Address, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>