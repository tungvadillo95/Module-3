@model HomeDetailViewModel
@{ 
    ViewBag.Title = Model.TitleName;
    var avatarPath = $"/images/{(Model.Employee.Avatarpath ?? "none-avatar.png")}";
    var languages = Model.Employee.Languages != null
                            ? string.Join(", ", Model.Employee.Languages.Select(lg => lg.LanguageName)) 
                            : string.Empty;

}

