<div class="row justify-content-center">
    <div class="col-sm-6">
        <div class="card my-2">
            <div class="card-header">
                <h3 style="text-align: center;">@Model.Employee.Name</h3>
            </div>
            <div class="card-body text-center">
                <img src="@avatarPath" class="card-img-top" style="width:400px; height:300px" asp-append-version="true"/>
                <h3>Email: @Model.Employee.Email</h3>
                <h3>Department: @Model.Employee.DepartmentName</h3>
                <h3>Language: @languages</h3>
            </div>
            <div class="card-footer text-center">
